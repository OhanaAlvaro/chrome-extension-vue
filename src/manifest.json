{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://familycinema.netlify.app/",
  "version": "1.1.2",
  "description": "Decide what you watch",
  "default_locale": "en",
  "permissions": ["storage", "https://arrietaeguren.es/movies/api/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "commands": {
    "mark-current-time-sex": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Mark current time as containing sex"
    },
    "mark-current-time-violence": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Mark current time as containing violence"
    },
    "mark-current-time-other": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Mark current time as containing miscellaneous"
    },
    "mark-current-time": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Mark current time as a scene start/end"
    }
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.disneyplus.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["js/content-script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
